<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a41908.weather_forecast.around"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--百度地图-->
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapViewTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--底部导航栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">
            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:background="#4F5475">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:baselineAligned="false">

                    <FrameLayout
                        android:id="@+id/layout1"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="#00000000" >

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="12dip"
                            android:background="@mipmap/tab_home_hl"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="6dip"
                            android:text="首页"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                    </FrameLayout><!--首页-->

                    <FrameLayout
                        android:id="@+id/layout2"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="#00000000" >

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="12dip"
                            android:background="@mipmap/tab_surround_hl"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="6dip"
                            android:text="周边天气"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />
                        //   android:textColor="@color/tab_friendfeed_text"
                    </FrameLayout><!--周边天气-->

                    <FrameLayout
                        android:id="@+id/layout3"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="#00000000" >

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="12dip"
                            android:background="@mipmap/tab_setting_hl" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="6dip"
                            android:text="设置"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />
                    </FrameLayout><!--设置-->

                </LinearLayout>

            </FrameLayout>
        </LinearLayout><!--导航栏-->

    </FrameLayout>

</LinearLayout>
